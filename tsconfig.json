{
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "inlineSourceMap": true,
    "newLine": "lf",
    "pretty": true,
    "strict": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "disableSizeLimit": true,
    "outDir": "build/",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2019"],
    "types": ["node"],
    "removeComments": true
  },
  "exclude": ["./build/"]
}